@page "/"
@using SchemaExplorer.ReportBuilder
@using SchemaExplorer.Core
@using SchemaExplorer.Core.Types

<PageTitle>Index</PageTitle>

<div class="schema-container">
    <Main Types="ParseSchema()"></Main>
</div>

@code {

    public SchemaType ParseSchema()
    {
        var sdlContent = File.ReadAllText("schema.graphql");
        var sp = new SchemaParser();
        return sp.Parse(sdlContent);
    }

}